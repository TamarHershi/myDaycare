<br>
<h1 style="font-family: 'Josefin Sans', serif;"> <%= link_to @child.name, my_child_path(@child.id, :parent_id => @parent.id)%> <small>Daily Information History</h1></small>

<br>
<br>
<% @infos.each do |info| %>
  <h2 style="font-family: 'Josefin Sans', serif;"> <stuff-big><%= info.created_at.strftime('%D') %></stuff-big></h2>
<div class="border">
  <div class="row">
    <div class="col-md-3">
      <h3 class="info_h3">Diapers</h3>
      <table class="table table-stripe">
        <thead>
          <th>Morning </th>
          <th>Noon </th>
          <th>Afternoon </th>
        </thead>
        <tbody>
          <tr class="success">
            <td><%= info.diaper_m %></td>
            <td><%= info.diaper_n %></td>
            <td><%= info.diaper_a %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <h3 class="info_h3">Meals</h3>
      <table class="table table-stripe">
        <thead>
          <th> Morning </th>
          <th> Noon </th>
          <th> Afternoon</th>
        </thead>
        <tbody>
          <tr class="warning">
            <td><%= info.breakfast %></td>
            <td><%= info.lunch %></td>
            <td><%= info.afternoon %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <h3 class="info_h3">General Info</h3>
      <br>
      <table class="table table-stripe">
        <thead>
          <th></th>
        </thead>
        <tbody>
          <tr class="info">
            <td><%= info.general %></td>
          </tr>
        </tbody>
      </table>
    </div>
    <div class="col-md-3">
      <h3 class="info_h3">Sleep time</h3>
      <br>
      <table class="table table-stripe">
        <thead>
          <th></th>
        </thead>
        <tbody>
          <tr class="active">
            <td><%= info.sleep_time %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <% if info.more_daiper || info.more_wipes || info.more_clothes %>
    <h3 class="info_h3">More Of</h3>
    <% if info.more_clothes %>
      <p>✔️ Clothes</p>
    <% end %>
    <% if info.more_daiper %>
      <p>✔️ Daipers</p>
    <% end %>
    <% if info.more_wipes %>
      <p>✔️ Wipes</p>
    <% end %>
  <% end %>
</div>
<% end %>
