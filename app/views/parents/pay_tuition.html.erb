  <% if !@parent.more_then_one? %>
    <%= render "charges/form", :parent => @parent, :child => @children.last, :amount => @children.last.room.tuition %>
  <% else %>
    <% t_child = Child.highest_tuition(@children) %>
    <% high_tuistion = t_child.room.tuition %>
    <% @children.each do |child| %>
      <% if @child == t_child %>
        <% @child = t_child %>
        <% @amount = high_tuistion %>
        <%= render "charges/form", :parent => @parent, :child => @child, :amount => @amount %>
      <% else %>
        <% @amount = child.room.tuition * 90/100 %>
        <% @child = child %>
        <%= render "charges/form", :parent => @parent, :child => @child, :amount => @amount %>
      <% end %>
    <% end %>
  <% end %>
