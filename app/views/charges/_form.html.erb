
<%= form_tag parent_child_charges_path(@parent.id, @child.id, amount: @amount) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <h2 style="font-family: 'Josefin Sans', serif;">Date:<stuff> <%= @current_month +" " + @current_year%></stuff></h2>
      <h2 style="font-family: 'Josefin Sans', serif;">Tuition: <stuff>$ <%= @amount/100 %></stuff></h2>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="<%= @amount %> "
          data-locale="auto"></script>
<% end %>
