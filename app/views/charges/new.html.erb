<h1 style="font-family: 'Josefin Sans', serif;"> Hey <%= @parent.name %> </h1>

<%= form_tag parent_charges_path(@parent.id) do %>
  <article>
    <% if flash[:error].present? %>
      <div id="error_explanation">
        <p><%= flash[:error] %></p>
      </div>
    <% end %>
    <label class="amount">
      <h2 style="font-family: 'Josefin Sans', serif;">Date:<stuff> <%= @current_month +" " + @current_year%></stuff></h2>
      <h2 style="font-family: 'Josefin Sans', serif;">Tuition:<stuff> $5.00</stuff></h2>
    </label>
  </article>

  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A month's subscription"
          data-amount="500"
          data-locale="auto"></script>
<% end %>
